<div class="homeLogo"></div>

<div class="welcomeMessage u-textCenter">
  <span class="welcomeMessage-parentName">Hi {{parent.first_name}}!</span><br/>You're in {{parent.pod_name}}.
</div>

<div>
	<blockquote>
		The most recent comment was from <strong>{{parent.pod_lc_parent_name}}</strong>
	 	 on <strong>{{format-date parent.pod_lc.created_at}}</strong>
	 	 at <strong>{{format-time parent.pod_lc.created_at}}:</strong>
	 	<br/><br/>
	 	<i>{{parent.pod_lc.body}}</i>
	 	<br/><br/>
	 	on the game <a href="/#/{{parent.slug}}/game/{{parent.pod_lc.game_id}}">{{parent.pod_lc_game_name}}</a>
	 </blockquote>
</div>


<ul class="gamesList">
{{#each game in sortedGames}}
  {{#link-to 'game' game class='gameItem u-cf' tagName='li'}}
    {{#if game.image_url}}
      <img class="gameItem-image u-floatLeft u-size5of12" {{bind-attr src=game.image_url}}/>
    {{else}}
      <img class="gameItem-image u-floatLeft u-size5of12" src="/assets/no-picture.png"/>
    {{/if}}
    <div class="gameItem-newFlag">New!</div>
    <div class="gameItem-name u-before6of12 u-after1of12">{{game.name}}</div>
    <div class="gameItem-description u-before6of12 u-after1of12">{{game.description}}</div>
  {{/link-to}}
{{/each}}
</ul>
