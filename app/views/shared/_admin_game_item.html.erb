<div class="list-group-item">
  <div class="row">
    <div class="col-md-12">
      <%- if default %>
      <p><span class="label label-primary">Default</span></p>
      <%- else -%>
      <p><span class="label label-success">Week <%= week %></span></p>
      <%- end %>
      <h4><%= link_to object.name, pod_admin_game_path(object) %></h4>
      <p><%= object.description %></p>
      <p>EYFS Area: <strong><%= object.eyfs_area %></strong>
      <br>Learning Goal: <strong><%= object.eyfs_goal %></strong></p>
    </div>
  </div>
</div>
