<div class="row">
  <div class="col-md-4">
    <%= form_for [:admin, @pod], html: {role: "form"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "", class: "form-control" %>
      </div>
      <div class="form-group">
        <% if params[:action] == 'edit' %>
          <%= f.submit "Update pod", class: "btn btn-primary" %>
        <% else %>
          <%= f.submit "Add pod", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
