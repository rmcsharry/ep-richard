<%= form_for [:admin, @game], html: {role: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, placeholder: "", class: "image_url form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :video_url_mp4, "MP4 video URL" %>
    <%= f.text_field :video_url_mp4, placeholder: "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :video_url_webm, "WebM video URL" %>
    <%= f.text_field :video_url_webm, placeholder: "", class: "form-control" %>
  </div>
  <div class="form-group">
    <% if params[:action] == 'new' %>
      <%= f.submit "Add game", class: "btn btn-primary" %>
    <% else %>
      <%= f.submit "Update game", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
