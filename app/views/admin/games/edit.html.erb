<%= form_for [:admin, @game], url: {action: "update"} do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.text_area :description, placeholder: "Description" %>
  <%= f.text_field :image_url, placeholder: "Image URL" %>
  <%= f.text_field :video_url_mp4, placeholder: "MP4 video URL" %>
  <%= f.text_field :video_url_webm, placeholder: "WebM video URL" %>
  <%= f.submit "Update game" %>
<% end %>

<%= form_for [:admin, @game], method: "delete" do |f| %>
  <%= f.submit "Delete game" %>
<% end %>

