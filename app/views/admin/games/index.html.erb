<div class="row">
  <div class="col-md-5">
    <h2>Games</h2>
    <p class="lead">These are the games currently available on Easypeasy.</p>
    <p>
      <a class="btn btn-default btn-med" href="<%= new_admin_game_path %>">
        <span class="glyphicon glyphicon-plus"></span> Add new game
      </a>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="list-group">
    <%- @games.each_with_index do |game, index| %>
      <a class="list-group-item" href="<%= edit_admin_game_path(game) %>">
        <div class="row">
          <div class="col-md-3">
            <img class="" src="<%= game.image_url %>">
          </div>
          <div class="col-md-9">
            <h4><%= game.name %></h4>
            <p><%= game.description %></p>
          </div>
        </div>
      </a>
    <%- end %>
    </div>
  </div>
</div>
