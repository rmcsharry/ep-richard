<!DOCTYPE html>
<html lang="en">
  <head>
    <title>EasyPeasy admin</title>
    <%= render 'favicon' %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag 'admin', media: 'all' %>
    <%= javascript_include_tag 'admin' %>
    <%= csrf_meta_tags %>
    <!-- Add to home screen -->
    <%= stylesheet_link_tag 'addtohomescreen', media: 'all' %>
    <%= javascript_include_tag 'addtohomescreen' %>
    <%= stylesheet_link_tag 'addtohomescreen_custom', media: 'all' %>
    <script>
      addToHomescreen({
  	  skipFirstVisit: true,
  	  maxDisplayCount: 10,
  	  startDelay: 0.2,
  	  lifespan: 0,
  	  message: '<div class="ath-title">Add me to your homescreen</div><div class="ath-text">1. Tap %icon menu<br/>2. Tap <strong>add to homescreen</strong></div>',
  	  debug: false // set to true in order to test on desktop
    });
    </script>
  </head>

  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="<%= pod_admin_path %>"><img src="<%= asset_path 'logo-oneliner.png' %>" style="height: 44px;" /></a>
        </div>
        <% if current_admin && current_admin.type != 'PodAdmin' %>
        <ul class="nav navbar-nav">
          <li><a href="<%= admin_games_path %>">Games</a></li>
          <li><a href="<%= admin_pods_path %>">Pods</a></li>
          <li><a href="<%= admin_pod_admins_path %>">Pod admins</a></li>
        </ul>
        <% elsif current_admin && current_admin.type == 'PodAdmin' && current_admin.pod && current_admin.pod.is_active? %>
        <ul class="nav navbar-nav">
          <p class="navbar-text"><span class="glyphicon glyphicon-bookmark"></span><strong> <%= current_admin.pod.name %></strong></p>
          <li><a href="<%= pod_admin_parents_path %>">Parents</a></li>
          <li><a href="<%= pod_admin_games_path %>">Games</a></li>
          <li><a href="<%= pod_admin_comments_path %>">Comments</a></li>
          <% if !current_admin.parent.nil? %>
            <li><a href="<%= request.env["SERVER_ADDR"] %>/#/<%= current_admin.parent.slug %>/games" target="_blank">Mobile View</a></li>
          <% end %>
        </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="https://drive.google.com/uc?export=download&id=0B6h-F7SW7EH5RjVGMlRURUlCaWc">Help guide</a></li>
          <% if current_admin %>
            <li><a href="<%= admin_logout_path %>">Logout</a></li>
          <% end %>
        </ul>
    </nav>

    <div class="container-fluid">
      <% if current_admin && current_admin.type == 'PodAdmin' && current_admin.pod && current_admin.pod.is_in_trial?%>
        <div class="alert alert-success">
            You have <strong><%= current_admin.pod.days_left %> days left</strong> of your free trial! To keep using EasyPeasy check out our
            <a href="http://www.easypeasyapp.com/pricing.html" target="_blank"><strong>pricing plans</strong></a>
        </div>
      <% end %>
      <%= render 'shared/flash' %>
      <%= yield %>
    </div>

    <% if current_admin && current_admin.type == 'PodAdmin' && current_admin.pod %>

      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-48636478-3', 'auto');
        ga('send', 'pageview');

      </script>

      <script>
        window.intercomSettings = {
          app_id: "igw37dwb",
          user_id: "pa<%=current_admin.id%>",
          email: "<%=current_admin.email%>",
          "pod_name": "<%= raw current_admin.pod.name%>",
          "pod_description": "<%=current_admin.pod.description%>",
          "pod_admin_id": "<%=current_admin.id%>",
          "pod_id": "<%=current_admin.pod.id%>",
          "pod_go_live_date_at": <%= current_admin.pod.go_live_date.to_time.to_i if current_admin.pod.go_live_date %>,
          "created_at": <%= current_admin.created_at.to_time.to_i %>,
          "last_analytics_email_at": <%= current_admin.last_analytics_email_sent.to_time.to_i if current_admin.last_analytics_email_sent %>,
          "type": "PodAdmin"
        };
      </script>
      <script>(function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',intercomSettings);}else{var d=document;var i=function(){i.c(arguments)};i.q=[];i.c=function(args){i.q.push(args)};w.Intercom=i;function l(){var s=d.createElement('script');s.type='text/javascript';s.async=true;s.src='https://widget.intercom.io/widget/igw37dwb';var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);}if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})()</script>

    <% end %>

  </body>
</html>
